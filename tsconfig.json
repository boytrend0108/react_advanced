{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true, // forbids to use variables without types
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true, // allows use import default
    "esModuleInterop": true //allow module import instaed require()
  },

  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
